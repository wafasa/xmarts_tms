<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_recibo_discount">
         
         
             <t t-foreach="docs" t-as="doc">
              <!-- <t t-call="report.external_layout"> 
                 - <span t-field="doc.subject"/> [<span t-field="doc.stage_type"/>]</strong>
                -->
              
                <div class="page">
                    
                 <table cellspacing="0" style="border: solid #000000 1px;  border-bottom:0" class="table table-striped">
                    <tr style="background:#000000; color:#FFFFFF;">
                        <td><img t-attf-src="data:image/*;base64,{{doc.company_id.logo}}" style="width:80px;"/></td>
                        <td colspan="6"><strong>Formato de Solicitud de Prestamo o Descuento</strong></td>
                    
                    </tr>
                     <tr class="text-right">
                        <td colspan="7"></td>                     
                        
                    </tr>
                    <tr class="text-right">
                        <td colspan="3"></td>
                        
                        <td>Folio</td>
                        <td colspan="2" style="border: solid #000000 1px;"></td>
                        <td></td>
                      
                    </tr>
                     <tr class="text-right">
                        <td colspan="7"></td>                     
                        
                    </tr>
                    <tr class="text-right">
                        <td colspan="3">Nombre del operador:_______________________________________</td>
                       
                        <td >Monto</td>
                        <td colspan="2" style="border: solid #000000 1px;"></td>
                        <td></td>
                    </tr>
                    <tr class="text-right">
                        <td colspan="7"></td>                     
                        
                    </tr>
                     <tr class="text-right">
                        <td ></td>  
                        <td colspan="2" style="background:#000000; color:#FFFFFF;">Motivo de Descuento</td>
                        <td></td> 
                        <td colspan="2" style="background:#000000; color:#FFFFFF;">Condiciones de Pago</td>
                        <td></td>                      
                        
                    </tr>

                 </table>
                </div>
                 
                </t>
          
        </template>
       <record id="paperformat_discount" model="report.paperformat"> 
            <field name="name">No header</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>
    </record>


        <report file="x_tms.report_recibo_discount" id="action_report_discount" model="tms.expense" name="x_tms.report_recibo_discount" report_type="qweb-pdf" string="Prestamo / Descuento"/>
</data>
</odoo>
